<div class="container">
    {{!-- heading of the page --}}
    <div class="jumbotron">
        <img src="/assets/img/burger.jpg" alt="burger">
        <h3>Eat-Da-Burger!</h3>
    </div>
  
{{!-- Update burger details --}}

    <div class = "col-md-4 col-md-offset-1">
        <div class = "panel-panel default">
            <ul class = "list-group">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li class = "list-group-item">
                            <div class="input-group">
                                <p class = "lead">{{this.burger_name}}</p>
                                <span class = "input-group-btn">
                                    <form action="burgers/{{this.id}}?_method=PUT" method="POST">
                                        <input type="hidden" name="devoured" value ="true">
                                        <button class="btn btn-success" type="submit">EAT IT!</button>
                                    </form>
                                </span>
                            </div>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

{{!-- Display Burger Details --}}

    <div class = "row">
        <div class = "col-md-4 col-md-offset-2">
            <div class = "panel-panel default">
                <ul class = "list-group">
                    {{#each burgers}}
                        {{#if this.devoured}}
                            <li class="list-group-item">
                                <p class = "lead">{{this.burger_name}}</p>
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

{{!-- Enter the burger details --}}
    <div class="col-md-10 col-md-offset-1">
       
        {{!-- Create form --}}
        <form class="create-form" action="burgers/" method="POST">
            <div class="form-group">
                <textarea class="form-control input-lg" type="text" name="b_name" rows="3"></textarea>
            </div>
            <button class = "btn btn-primary" type="submit">Submit</button>
             <p class="lead"> Enter a burger you want to eat Click the "Submit" button</p>
        </form>
    </div>
</div>
